<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foreach.imageserver.core.data.ApplicationDao">

    <sql id="columns">
        A.id as application_id,
        A.name as application_name,
        A.active as application_active,
        A.code as application_code,
        A.created as application_created,
        A.updated as application_updated
    </sql>

	<resultMap id="applicationMap" type="Application">
		<id property="id" column="application_id"/>
		<result property="name" column="application_name"/>
		<result property="active" column="application_active"/>
        <result property="code" column="application_code"/>
		<result property="dateCreated" column="application_created"/>
		<result property="dateUpdated" column="application_updated"/>
	</resultMap>

	<select id="getById" parameterType="int" resultMap="applicationMap">
		SELECT <include refid="columns"/>
		FROM APPLICATION A
		WHERE id = #{value}
	</select>

</mapper>