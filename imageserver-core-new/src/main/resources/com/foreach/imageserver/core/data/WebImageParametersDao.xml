<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foreach.imageserver.core.data.WebImageParametersDao">
    <sql id="columns">
		WOI.id as web_original_images_id,
        WOI.url as web_original_images_url,
        WOI.width as web_original_images_width,
        WOI.height as web_original_images_height,
        WOI.imageTypeId as web_original_images_imagetype
	</sql>

    <resultMap id="webImageParametersMap" type="WebImageParameters">
        <id property="id" column="web_original_images_id"/>
        <result property="url" column="web_original_images_url"/>
        <result property="dimensions.width" column="web_original_images_width"/>
        <result property="dimensions.height" column="web_original_images_height"/>
        <result property="imageType" column="web_original_images_imagetype"
                typeHandler="com.foreach.imageserver.core.data.handlers.ImageTypeHandler"/>
    </resultMap>

    <select id="getById" parameterType="int" resultMap="webImageParametersMap">
        SELECT
        <include refid="columns"/>
        FROM WEB_ORIGINAL_IMAGES WOI
        WHERE WOI.id = #{value}
    </select>

    <select id="getByParameters" parameterType="String" resultMap="webImageParametersMap">
        SELECT
        <include refid="columns"/>
        FROM WEB_ORIGINAL_IMAGES WOI
        WHERE WOI.url = #{value}
    </select>

    <insert id="insert" parameterType="WebImageParameters">
        INSERT INTO WEB_ORIGINAL_IMAGES (
            id,
            url,
            width,
            height,
            imageTypeId
        ) VALUES (
            #{id},
            #{url},
            #{dimensions.width},
            #{dimensions.height},
            #{imageType.id}
        )
    </insert>
</mapper>

