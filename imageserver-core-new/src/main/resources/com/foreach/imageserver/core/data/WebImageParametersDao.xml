<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foreach.imageserver.core.data.WebImageParametersDao">
    <sql id="columns">
		WIP.imageId as wip_imageId,
        WIP.url as wip_url,
        WIP.width as wip_width,
        WIP.height as wip_height,
        WIP.imageTypeId as wip_imagetype
	</sql>

    <resultMap id="webImageParametersMap" type="WebImageParameters">
        <id property="imageId" column="wip_imageId"/>
        <result property="url" column="wip_url"/>
        <result property="dimensions.width" column="wip_width"/>
        <result property="dimensions.height" column="wip_height"/>
        <result property="imageType" column="wip_imagetype"
                typeHandler="com.foreach.imageserver.core.data.handlers.ImageTypeHandler"/>
    </resultMap>

    <select id="getById" parameterType="int" resultMap="webImageParametersMap">
        SELECT
        <include refid="columns"/>
        FROM WEB_IMAGE_PARAMETERS WIP
        WHERE WIP.imageId = #{value}
    </select>

    <insert id="insert" parameterType="WebImageParameters">
        INSERT INTO WEB_IMAGE_PARAMETERS (
            imageId,
            url,
            width,
            height,
            imageTypeId
        ) VALUES (
            #{imageId},
            #{url},
            #{dimensions.width},
            #{dimensions.height},
            #{imageType.id}
        )
    </insert>
</mapper>

