<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foreach.imageserver.core.data.ImageDao">

    <sql id="columns">
		I.imageId as image_id,
        I.created as image_datecreated,
        I.repositoryCode as image_repository_code
	</sql>

    <resultMap id="imageMap" type="Image">
        <id property="imageId" column="image_id"/>
        <result property="dateCreated" column="image_datecreated"/>
        <result property="repositoryCode" column="image_repository_code"/>
    </resultMap>

    <select id="getById" parameterType="map" resultMap="imageMap">
        SELECT
        <include refid="columns"/>
        FROM Image I
        WHERE I.imageId = #{imageId}
    </select>

    <insert id="insert" parameterType="Image">
        <selectKey keyProperty="imageId" resultType="int" order="BEFORE">
            SELECT SEQ_IMAGES.nextval AS ID FROM DUAL
        </selectKey>
        INSERT INTO Image (
            imageId,
            repositoryCode
        ) VALUES (
            #{imageId},
            #{repositoryCode}
        )
    </insert>

</mapper>