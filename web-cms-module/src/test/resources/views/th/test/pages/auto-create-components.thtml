<html xmlns:wcm="http://www.w3.org/1999/xhtml">
<head>
    <title>Auto create components</title>
</head>
<body>

<div id="no-scope-or-type-specified" wcm:component="page-markup" wcm:auto-create>Page markup: [[${asset.title}]]</div>
<div id="creation-scope-specified" wcm:component="global-markup" wcm:auto-create="global">Global markup: [[${asset.title}]]</div>
<div id="component-scope-specified" wcm:component="global-markup2" wcm:scope="global" wcm:auto-create>Global markup2: [[${asset.title}]]</div>
<div id="type-specified" wcm:component="page-rich-text" wcm:type="rich-text" wcm:auto-create>Page rich-text: [[${asset.title}]]</div>

<div id="default-container-type" wcm:component="page-container" wcm:auto-create>
    <div wcm:component="title" wcm:type="plain-text">container title</div>
    <th:block wcm:component="body">container body</th:block>
</div>

<div id="nested-containers" wcm:component="page-nested-container" wcm:auto-create>
    <div wcm:component="title" wcm:type="plain-text">container title</div>
    <th:block wcm:component="body">
        <th:block wcm:component="subtitle">container sub title</th:block>
        <th:block wcm:component="text" wcm:type="container"/>
    </th:block>
    <div wcm:component="footer">
        <div wcm:component="footer-text">container footer text</div>
    </div>
</div>

</body>
</html>