				<constraints primaryKey="true" primaryKeyName="pk_img_image_profile" nullable="false"/>
			</column>
			<column name="name" type="java.sql.Types.VARCHAR(50)">
				<constraints nullable="false" unique="true"/>
			</column>
		</createTable>
	</changeSet>

