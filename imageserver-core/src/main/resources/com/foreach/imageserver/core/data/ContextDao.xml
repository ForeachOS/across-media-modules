<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foreach.imageserver.core.data.ContextDao">

    <sql id="columns">
        C.id as context_id,
        C.code as context_code
    </sql>

    <resultMap id="contextMap" type="Context">
        <id property="id" column="context_id"/>
        <result property="code" column="context_code"/>
    </resultMap>

    <select id="getAllContexts" resultMap="contextMap">
        SELECT
        <include refid="columns"/>
        FROM CONTEXT C
    </select>

    <select id="getById" parameterType="int" resultMap="contextMap">
        SELECT
        <include refid="columns"/>
        FROM CONTEXT C
        WHERE C.id = #{value}
    </select>

    <select id="getByCode" parameterType="string" resultMap="contextMap">
        SELECT
        <include refid="columns"/>
        FROM CONTEXT C
        WHERE C.code = #{value}
    </select>

    <select id="getForResolution" parameterType="int" resultMap="contextMap">
        SELECT
        <include refid="columns"/>
        FROM CONTEXT C INNER JOIN CONTEXT_IMAGE_RESOLUTION CIR ON C.ID = CIR.contextId
        WHERE CIR.imageResolutionId = #{value}
    </select>

    <update id="updateContextsForResolution" parameterType="map">
        begin
        DELETE FROM CONTEXT_IMAGE_RESOLUTION WHERE imageResolutionId = #{resolutionId};
        <if test="!contexts.isEmpty">
            <foreach item="context" index="index" collection="contexts" open="" separator="" close="">
            INSERT INTO CONTEXT_IMAGE_RESOLUTION (contextId, imageResolutionId)
            VALUES (#{context.id}, #{resolutionId});
            </foreach>
        </if>
        end;
    </update>

</mapper>