<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="be.mediafin.imageserver.imagerepositories.diocontent.data.DioContentImageParametersDao">
    <sql id="columns">
		DIP.imageId as dip_imageId,
        DIP.dioContentId as dip_diocontentid
	</sql>

    <resultMap id="dioContentImageParametersMap" type="DioContentImageParameters">
        <id property="imageId" column="dip_imageId"/>
        <result property="dioContentId" column="dip_diocontentid"/>
    </resultMap>

    <select id="getById" parameterType="int" resultMap="dioContentImageParametersMap">
        SELECT
        <include refid="columns"/>
        FROM DIO_CONTENT_IMAGE_PARAMETERS DIP
        WHERE DIP.imageId = #{value}
    </select>

    <insert id="insert" parameterType="DioContentImageParameters">
        INSERT INTO DIO_CONTENT_IMAGE_PARAMETERS (
            imageId,
            dioContentId
        ) VALUES (
            #{imageId},
            #{dioContentId}
        )
    </insert>
</mapper>

