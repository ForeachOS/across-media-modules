<databaseChangeLog
		xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<!-- Default table names -->
	<property name="table.report_task" value="rm_report_task"/>

	<changeSet id="201408191330" author="arne" runAlways="true" dbms="oracle">
		<sql>
			ALTER session SET nls_length_semantics=CHAR;
		</sql>
	</changeSet>

	<changeSet id="201410151126" author="marc">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="${table.report_task}"/>
			</not>
		</preConditions>

		<comment>Creates rm_report_task table</comment>

		<createTable tableName="${table.report_task}">
			<column name="id" type="java.sql.Types.VARCHAR(150)">
				<constraints nullable="false" primaryKey="true" primaryKeyName="pk_rm_rt"/>
			</column>
			<column name="hash_code" type="java.sql.Types.VARCHAR(64)"/>
			<column name="created_by" type="java.sql.Types.VARCHAR(255)"/>
			<column name="parameters" type="java.sql.Types.CLOB"/>
			<column name="result" type="java.sql.Types.CLOB"/>
			<column name="status" type="java.sql.Types.VARCHAR(25)"/>
			<column name="saved" type="java.sql.Types.BOOLEAN"/>
			<column name="created" type="java.sql.Types.TIMESTAMP"/>
			<column name="updated" type="java.sql.Types.TIMESTAMP"/>
			<column name="expiry_date" type="java.sql.Types.TIMESTAMP"/>
		</createTable>
	</changeSet>

	<changeSet id="201410151343" author="wtx">
		<dropColumn tableName="${table.report_task}" columnName="id"/>
		<addColumn tableName="${table.report_task}">
			<column name="id" type="java.sql.Types.BIGINT">
				<constraints nullable="false" primaryKey="true" primaryKeyName="pk_rm_rt"/>
			</column>
			<column name="uuid" type="java.sql.Types.VARCHAR(150)">
				<constraints unique="true" />
			</column>
		</addColumn>
	</changeSet>
</databaseChangeLog>