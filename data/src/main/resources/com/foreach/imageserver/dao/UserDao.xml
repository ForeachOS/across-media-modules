<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foreach.imageserver.dao.UserDao">

	<sql id="appUserColumns">
		u.id AS app_user_iduser,
		u.username AS app_user_username,
		u.password AS app_user_password,
		u.isadministrator AS app_user_administrator,
		u.isactive AS app_user_active
	</sql>

	<resultMap id="appUserMap" type="AppUser">
		<id property="id" column="app_user_iduser"/>
		<result property="username" column="app_user_username"/>
		<result property="password" column="app_user_password"/>
		<result property="administrator" column="app_user_administrator"/>
        <result property="active" column="app_user_active"/>
	</resultMap>

	<select id="getAppUserByName" parameterType="String" resultMap="appUserMap">
        SELECT <include refid="appUserColumns"/>
		FROM appuser u
        WHERE u.username = #{username} AND u.isactive = 1
	</select>
</mapper>