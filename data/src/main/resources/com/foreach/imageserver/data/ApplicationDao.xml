<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.foreach.imageserver.data.ApplicationDao">

    <sql id="applicationColumns">
        A.id as application_id,
        A.name as application_name,
        A.code as application_code,
        A.active as application_active,
        A.created as application_created,
        A.updated as application_updated
    </sql>
	
	<resultMap id="applicationMap" type="Application">
		<id property="id" column="application_id"/>
		<result property="name" column="application_name"/>
		<result property="code" column="application_code"/>
		<result property="active" column="application_active"/>
		<result property="dateCreated" column="application_created"/>
		<result property="dateUpdated" column="application_updated"/>
	</resultMap>

	<select id="getApplicationById" parameterType="int" resultMap="applicationMap">
		SELECT <include refid="applicationColumns"/>
		FROM Application A
		WHERE A.id = #{value}
	</select>
	
	<select id="getAllApplications" resultMap="applicationMap">
		SELECT
		<include refid="applicationColumns"/>
		FROM Application A
		ORDER BY application_id ASC
	</select>

    <insert id="insertApplication" parameterType="Application" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO Application (
            name,
            callbackurl
        ) VALUES (
            #{name},
            #{callbackUrl}
        )
    </insert>

    <update id="updateApplication" parameterType="Application">
        UPDATE Application
        SET
            name = #{name},
            callbackurl = #{callbackUrl}
        WHERE id = #{id}
    </update>

    <delete id="deleteApplication" parameterType="int">
        DELETE
        FROM Application
        WHERE id = #{value}
    </delete>

</mapper>